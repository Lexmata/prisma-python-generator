datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// For local development, use: provider = "node ./dist/bin.js"
// After `npm install prisma-python-generator`, use the package name:
generator python {
  provider = "node ./dist/bin.js"
  output   = "./generated/prisma_models"
}

/// Role of a user in the system
enum Role {
  USER
  ADMIN
  MODERATOR
}

/// Status of a post
enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

/// A user in the system
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  posts     Post[]
  profile   Profile?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// A user profile with extended info
model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  avatar String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int     @unique
}

/// A blog post
model Post {
  id          Int        @id @default(autoincrement())
  title       String
  content     String?
  published   Boolean    @default(false)
  status      PostStatus @default(DRAFT)
  author      User       @relation(fields: [authorId], references: [id])
  authorId    Int
  tags        Tag[]
  viewCount   Int        @default(0)
  metadata    Json?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

/// A tag for categorizing posts
model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[]
}
